<Window x:Class="ProductionCompanyApp.Views.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}"
        Height="550" Width="650" 
    WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="/Resources/app.ico">

    <Grid Background="{StaticResource BackgroundColor}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок окна -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryColor}" 
                Padding="15"
                CornerRadius="5,5,0,0">
            <TextBlock Text="{Binding WindowTitle}" 
                       FontSize="22"
                       Foreground="White"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Форма -->
        <Border Grid.Row="1" 
                BorderBrush="{StaticResource SecondaryColor}" 
                BorderThickness="0,1,0,1"
                Padding="25,30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <!-- Увеличили ширину меток -->
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Артикул -->
                <TextBlock Grid.Row="0" Grid.Column="0" 
                           Text="Артикул:"
                           Style="{StaticResource FormLabel}"/>
                <TextBox Grid.Row="0" Grid.Column="1" 
                         Text="{Binding Article, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="14"
                         Height="36" 
                    VerticalContentAlignment="Center"/>

                    <!-- Тип продукции -->
                    <TextBlock Grid.Row="1" Grid.Column="0" 
                           Text="Тип продукции:"
                           Style="{StaticResource FormLabel}"
                           Margin="0,15,0,0"/>
                    <ComboBox Grid.Row="1" Grid.Column="1" 
                          Margin="0,15,0,0"
                          ItemsSource="{Binding ProductTypes}"
                          SelectedItem="{Binding SelectedProductType}"
                          DisplayMemberPath="Name"
                          Height="36" 
                        VerticalContentAlignment="Center"/>

                        <!-- Наименование -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                           Text="Наименование:"
                           Style="{StaticResource FormLabel}"
                           Margin="0,15,0,0"/>
                        <TextBox Grid.Row="2" Grid.Column="1" 
                         Margin="0,15,0,0"
                         Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="14"
                         Height="36"
                            VerticalContentAlignment="Center"/>

                            <!-- Минимальная стоимость -->
                            <TextBlock Grid.Row="3" Grid.Column="0" 
                           Text="Минимальная стоимость(₽):"
                           Style="{StaticResource FormLabel}"
                           Margin="0,15,0,0"/>
                            <TextBox Grid.Row="3" Grid.Column="1" 
                         Margin="0,15,0,0"
                         Text="{Binding MinPartnerPrice, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                         FontSize="14"
                         Height="36" 
                                VerticalContentAlignment="Center"/>

                                <!-- Ширина рулона -->
                                <TextBlock Grid.Row="4" Grid.Column="0" 
                           Text="Ширина рулона (м):"
                           Style="{StaticResource FormLabel}"
                           Margin="0,15,0,0"/>
                                <TextBox Grid.Row="4" Grid.Column="1" 
                         Margin="0,15,0,0"
                         Text="{Binding RollWidth, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                         FontSize="14"
                         Height="36" 
                                    VerticalContentAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Кнопки -->
        <Border Grid.Row="2" 
                Background="{StaticResource SecondaryColor}" 
                Padding="20"
                CornerRadius="0,0,5,5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="✅ СОХРАНИТЬ" 
                        Name="SaveButton"
                        Width="150" 
                        Margin="0,0,15,0"
                        Click="SaveButton_Click"
                        Style="{StaticResource PrimaryButton}"
                        FontSize="16"
                        Padding="12,7"
                        Height="40"/>
                <!-- Увеличили высоту кнопки -->
                <Button Content="❌ ОТМЕНА" 
                        Name="CancelButton"
                        Width="120" 
                        Click="CancelButton_Click"
                        Style="{StaticResource SecondaryButton}"
                        FontSize="15"
                        Padding="10,6"
                        Height="36"/>
                <!-- Увеличили высоту кнопки -->
            </StackPanel>
        </Border>
    </Grid>
</Window>