<Window x:Class="ProductionCompanyApp.Views.MaterialCalculationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Расчёт материалов для производства"
        Height="600" Width="650"
        WindowStartupLocation="CenterOwner"
        Icon="/Resources/app.ico"
        MinHeight="600" MinWidth="650">

    <Grid Background="{StaticResource BackgroundColor}" Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryColor}" 
                Padding="15"
                CornerRadius="5,5,0,0">
            <TextBlock Text="РАСЧЁТ ПОТРЕБНОСТИ В МАТЕРИАЛАХ" 
                       FontSize="20"
                       Foreground="White"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Форма расчёта - используем ScrollViewer -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="0">
            <Border BorderBrush="{StaticResource SecondaryColor}" 
                    BorderThickness="0,1,0,1"
                    Padding="25,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Выбор продукта -->
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="Продукция:"
                               Style="{StaticResource FormLabel}"
                               FontSize="15"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" 
                              Name="ProductComboBox"
                              DisplayMemberPath="Name"
                              Height="36"
                              VerticalContentAlignment="Center"
                              Margin="0,0,0,5"/>

                    <!-- Количество продукции -->
                    <TextBlock Grid.Row="1" Grid.Column="0" 
                               Text="Количество продукции:"
                               Style="{StaticResource FormLabel}"
                               FontSize="15"
                               Margin="0,10,0,0"/>
                    <TextBox Grid.Row="1" Grid.Column="1" 
                             Name="ProductCountTextBox"
                             Margin="0,10,0,5"
                             Text="10"
                             FontSize="14"
                             Height="36"
                             VerticalContentAlignment="Center"/>

                    <!-- Тип материала -->
                    <TextBlock Grid.Row="2" Grid.Column="0" 
                               Text="Тип материала:"
                               Style="{StaticResource FormLabel}"
                               FontSize="15"
                               Margin="0,10,0,0"/>
                    <ComboBox Grid.Row="2" Grid.Column="1" 
                              Name="MaterialTypeComboBox"
                              Margin="0,10,0,5"
                              DisplayMemberPath="Name"
                              Height="36"
                              VerticalContentAlignment="Center"/>

                    <!-- Параметр 1 (Ширина) -->
                    <TextBlock Grid.Row="3" Grid.Column="0" 
                               Text="Параметр 1 (ширина, м):"
                               Style="{StaticResource FormLabel}"
                               FontSize="15"
                               Margin="0,10,0,0"/>
                    <TextBox Grid.Row="3" Grid.Column="1" 
                             Name="Parameter1TextBox"
                             Margin="0,10,0,5"
                             Text="1.0"
                             FontSize="14"
                             Height="36"
                             VerticalContentAlignment="Center"/>

                    <!-- Параметр 2 (Длина) -->
                    <TextBlock Grid.Row="4" Grid.Column="0" 
                               Text="Параметр 2 (длина, м):"
                               Style="{StaticResource FormLabel}"
                               FontSize="15"
                               Margin="0,10,0,0"/>
                    <TextBox Grid.Row="4" Grid.Column="1" 
                             Name="Parameter2TextBox"
                             Margin="0,10,0,5"
                             Text="1.0"
                             FontSize="14"
                             Height="36"
                             VerticalContentAlignment="Center"/>

                    <!-- Остаток на складе -->
                    <TextBlock Grid.Row="5" Grid.Column="0" 
                               Text="Остаток на складе:"
                               Style="{StaticResource FormLabel}"
                               FontSize="15"
                               Margin="0,10,0,0"/>
                    <TextBox Grid.Row="5" Grid.Column="1" 
                             Name="StockQuantityTextBox"
                             Margin="0,10,0,5"
                             Text="100"
                             FontSize="14"
                             Height="36"
                             VerticalContentAlignment="Center"/>

                    <!-- Результат расчёта - светлый оттенок основного зелёного -->
                    <Border Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                        Background="#E8F5E9" 
                        BorderBrush="{StaticResource PrimaryColor}"
                        BorderThickness="1"
                        Margin="0,20,0,0"
                        Padding="15"
                        CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="📊 РЕЗУЛЬТАТ РАСЧЁТА:" 
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="{StaticResource PrimaryColor}"
                   Margin="0,0,0,10"/>
                            <TextBlock Name="ResultTextBlock"
                   FontSize="14"
                   TextWrapping="Wrap"
                   MinHeight="60"
                   Foreground="#2D6033" 
                   Text="Заполните все поля и нажмите 'Рассчитать'"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </ScrollViewer>

        <!-- Кнопки -->
        <Border Grid.Row="2" 
                Background="{StaticResource SecondaryColor}" 
            Padding="15"
                CornerRadius="0,0,5,5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="🧮 РАССЧИТАТЬ" 
                        Name="CalculateButton"
                        Width="160" 
                        Margin="0,0,15,0"
                        Click="CalculateButton_Click"
                        Style="{StaticResource PrimaryButton}"
                        FontSize="16"
                        Padding="12,7"
                        Height="40"/>
                <Button Content="❌ ЗАКРЫТЬ" 
                        Name="CloseButton"
                        Width="120" 
                        Click="CloseButton_Click"
                        Style="{StaticResource SecondaryButton}"
                        FontSize="15"
                        Padding="10,6"
                        Height="36"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>